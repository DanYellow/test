{
    "git": {
        "commitMessage": "chore: release ${version}",
        "requireBranch": "main"
    },
    "npm": {
        "publish": false
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": {
                "name": "angular"
            },
            "infile": "CHANGELOG.md",
            "gitRawCommitsOpts": {
                "from": "HEAD~2"
            }
        }
    },
    "hooks": {
        "before:init": ["git pull"]
    }
}
